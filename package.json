		"solhint-plugin-prettier": "0.0.5",
		"solidity-coverage": "^0.7.16",
		"ts-generator": "^0.1.1",
		"ts-node": "^10.1.0",
		"typechain": "^5.1.2",
		"typescript": "^5.0.4"
	},
	"scripts": {
		"compile": "hardhat compile",
		"test": "hardhat test",
		"verify:rinkeby": "hardhat verify --network rinkeby",
		"lint": "yarn lint:sol && yarn lint:js",
		"lint:sol": "solhint contracts/**/*.sol",
		"lint:sol:fix": "solhint contracts/**/*.sol --fix",
		"lint:js": "eslint . --ext .js,.ts",
		"format": "prettier --write 'contracts/**/*.sol'; prettier --write '**/*.*(js|ts)'; prettier --write '**/*.json'",
		"format:check": "prettier --check '**/*.*(sol|json)'",
		"format:fix": "pretty-quick --pattern '**/*.*(sol|json)' --staged --verbose",
		"deploy:sepolia": "hardhat deploy --network sepolia",
		"deploy:mumbai": "hardhat deploy --network mumbai",
		"pretest": "yarn compile",
		"lt": "yarn lint && yarn test",
		"coverage": "hardhat coverage",
		"generate:uml": "sol2uml ./contracts",
		"generate:docs": "hardhat compile && hardhat docgen --theme markdown",
		"size": "hardhat size-contracts"
	}
}
